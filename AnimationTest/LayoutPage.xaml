<Page x:Class="AnimationTest.LayoutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AnimationTest"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="LayoutPage" WindowHeight="350" WindowWidth="525">

    <Grid>
        <StackPanel Margin="100,80,100,120"/>
        <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="这几天，因工作需要，要对一个小软件进行UI调整。主要内容就是让其能够实现自适应窗体（包括文字和图标），做成像WIN7下的Media Center一样的UI。自适应窗体，顾名思义，就是窗口内容的显示大小能够随着窗口的大小变化而变化。今天我来说说如何用WPF来实现自适应窗体。" Background="#FFC5BFBF" HorizontalAlignment="Left" Margin="10" Width="100" d:LayoutOverrides="Height"/>
        <Button x:Name="button" Content="Button"  Margin="100,120,100,100"/>

    </Grid>
</Page>
